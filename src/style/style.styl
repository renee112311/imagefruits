            text-shadow none
          li
            text-align center
            line-height 30px
            font-size 18px
            position relative
            a
              color header1
              text-shadow 0 0 5px #FFF
              &::before 
                content: ''
                width: 0
                height: 100%
                position: absolute
                left: 0
                bottom: 0
                transition: width 0.35s ease
                z-index: -1
              &:hover::before 
                width: 100%
                background: header2
              &::after
                content: ''
                width: 0
                height: 100%
                position: absolute
                right: 0
                bottom: 0
                background: header2
                transition: width 0.35s ease
                z-index: -1
              &:hover::after 
                width: 100%
                background: transparent
            

